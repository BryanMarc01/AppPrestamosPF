<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".RegistrarPrestamo" >

    <EditText

        android:id="@+id/capital"
        android:layout_width="316dp"
        android:layout_height="52dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="160dp"
        android:layout_marginEnd="46dp"
        android:autofillHints="emailAddress"
        android:background="@drawable/botonredondo"
        android:backgroundTint="#F4F3F3"
        android:elevation="2dp"
        android:ems="10"
        android:inputType="number"
        android:lineSpacingExtra="8sp"
        android:text="  Capital a prestar"
        android:textAlignment="viewStart"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:textColor="#8A494949"
        android:textSize="14sp"
        android:typeface="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText

        android:id="@+id/capital2"
        android:layout_width="148dp"
        android:layout_height="98dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="412dp"
        android:layout_marginEnd="46dp"
        android:autofillHints="emailAddress"
        android:background="@drawable/botonredondo"
        android:backgroundTint="#F4F3F3"
        android:elevation="2dp"
        android:ems="10"
        android:inputType="number"
        android:lineSpacingExtra="8sp"
        android:text="Monto Diario a Pagar"
        android:textAlignment="viewStart"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:textColor="#8A494949"
        android:textSize="14sp"
        android:typeface="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText

        android:id="@+id/capital3"
        android:layout_width="148dp"
        android:layout_height="98dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="412dp"
        android:layout_marginEnd="46dp"
        android:autofillHints="emailAddress"
        android:background="@drawable/botonredondo"
        android:backgroundTint="#F4F3F3"
        android:elevation="2dp"
        android:ems="10"
        android:inputType="number"
        android:lineSpacingExtra="8sp"
        android:text="Monto Total a Pagar"
        android:textAlignment="viewStart"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:textColor="#8A494949"
        android:textSize="14sp"
        android:typeface="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/RegText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="112dp"
        android:text="Registro de Prestamo"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>