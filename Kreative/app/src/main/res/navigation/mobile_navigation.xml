<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/fragment_home">

    <fragment
        android:id="@+id/fragment_home"
        android:name="com.example.kreative.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_fragment_home_self"
            app:destination="@id/fragment_dashboard" />
    </fragment>

    <fragment
        android:id="@+id/fragment_dashboard"
        android:name="com.example.kreative.ui.dashboard.DashboardFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_dashboard" >
        <action
            android:id="@+id/action_fragment_dashboard_to_fragment_notifications"
            app:destination="@id/fragment_notifications"
            app:enterAnim="@anim/fade_in" />
    </fragment>

    <fragment
        android:id="@+id/fragment_notifications"
        android:name="com.example.kreative.ui.notifications.NotificationsFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_notifications" >
        <action
            android:id="@+id/action_fragment_notifications_to_fragment_home"
            app:destination="@id/fragment_home"
            app:enterAnim="@anim/fade_in" />
    </fragment>
</navigation>